# Torn API Key - Get from https://www.torn.com/preferences.php#tab=api
TORN_API_KEY=your_api_key_here

# Torn Login Credentials (required for browser automation)
TORN_USERNAME=your_username_here
TORN_PASSWORD=your_password_here

# Bot Configuration
# Time in seconds between API calls (minimum 30 due to API cache)
API_CALL_INTERVAL=60

# Features to enable (true/false)
ENABLE_CRIMES=true
ENABLE_GYM=true
ENABLE_ITEMS=true
ENABLE_EDUCATION=true
ENABLE_TRAVEL=false  # Travel is disabled by default as it requires more complex logic

# Browser Configuration
HEADLESS_BROWSER=false  # Set to true to run browser in headless mode